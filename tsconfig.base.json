{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "strict": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    "sourceMap": false,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/.tsbuildinfo",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@overlays/*": ["src/oca_extensions/state/overlays/*"]
    },
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "bundles",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/oca_extensions/state/overlays/separator.ts",
    "src/oca_extensions/state/overlays/example.ts",
    "src/utils/canonical.ts"
  ]
}