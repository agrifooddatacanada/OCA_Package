{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@oca_package/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*.ts", "tests/extensions.test.ts", "utils/canonical.ts"],
  "exclude": ["node_modules", "dist"]
}
